<p id="notice"><%= notice %></p>

<h1>Your Favorites</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Symbol</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.user.email %></td>
        <td><%= favorite.symbol %></td>
        <td><%= favorite.comment %></td>
        <td><%= link_to 'Show', favorite %></td>
        <td><%= link_to 'Edit', edit_favorite_path(favorite) %></td>
        <td><%= link_to 'Destroy', favorite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Favorite', new_favorite_path %>
