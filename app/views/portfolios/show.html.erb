<p id="notice"><%= notice %></p>

<h3 class="text">Portfolio:</h3>
<ul class="nav nav-pills">
    <li class="dropdown">
        <a href="#" data-toggle="dropdown" class="dropdown-toggle">
					<%= @portfolio.name %>
					 <b class="caret"></b></a>
        <ul class="dropdown-menu">
					<% @portfolios.each do |portfolio| %>
            <li><%= link_to portfolio.name, portfolio %></li>
					<% end %>
        </ul>
    </li>
    <li class="dropdown pull-right">
        <a href="#" data-toggle="dropdown" class="dropdown-toggle">Settings <b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li class="divider"></li>
            <li><a href="#">Settings</a></li>
        </ul>
    </li>
</ul>

<table class="table table-hover" id = "example">
  <thead>
    <tr>
			<th>Ticker</th>
			<th>Company</th>
			<th>Amount</th>
			<th>Current Price</th>
			<th>Change</th>
			<th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
		<% @holdings.each do |holdings| %>
		
    <% amount = holdings.sum_amount %>
		<% data = YahooFinance.quotes(["#{holdings.stock.symbol}"], [:ask, :change, :name]) %>
		<% price = data[0].ask %>
		<% change = data[0].change %>
		<% name = data[0].name %>
		<% value = amount.to_f * price.to_f %>
		
      <tr>
				<td><%= holdings.stock.symbol %></td>
				<td><%= name %></td>
				<td><%= amount %></td>
				<td><%= price %></td>
				<td class = "currency"><%= change %></td>
				<td><%= number_to_currency(value) %></td>
				</tr>

    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_portfolio_path(@portfolio) %> |
<%= link_to 'Back', portfolios_path %> |
<%= link_to 'Transactions', portfolio_holdings_path(@portfolio) %>
