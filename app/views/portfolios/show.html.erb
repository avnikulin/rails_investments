<p id="notice"><%= notice %></p>

<h1>Portfolio</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
			<th>Stocks</th>
			<th>Amount</th>
			<th>Current Price</th>
			<th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
		<% @holdings.each do |holdings| %>
    
      <tr class = "stock">
        <td><%= holdings.portfolio.user.name %></td>
        <td><%= holdings.portfolio.name %></td>
				<td><%= holdings.stock.symbol %></td>
				<td><% amount = holdings.sum_amount %>
					<%= amount %></td>
				<% data = YahooFinance.quotes(["#{holdings.stock.symbol}"], [:ask]) %>
					<% price = data[0].ask %>
					<td><%= price %></td>
				<% value = amount.to_f * price.to_f %><td>
					<%= number_to_currency(value) %></td>
				</tr>

    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_portfolio_path(@portfolio) %> |
<%= link_to 'Back', portfolios_path %>
