<table class="table table-hover" id = "example">
  <thead>
    <tr>
			<th>Ticker Basic</th>
			<th>Company</th>
			<th>Amount</th>
			<th>Current Price</th>
			<th>Change</th>
			<th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="holdings">
		<% @holdings.each do |holdings| %>
    <% amount = holdings.sum_amount %>
		<% data = YahooFinance.quotes(["#{holdings.stock.symbol}"], [:last_trade_price, :change, :name]) %>
		<% price = data[0].last_trade_price %>
		<% change = data[0].change %>
		<% name = data[0].name %>
		<% value = amount.to_f * price.to_f %>
		
		<tr id="holding_<%= holdings.id %>">
			<td><%= holdings.stock.symbol %></td>
			<td><%= name %></td>
			<td><%= amount %></td>
			<td><%= number_to_currency(price) %></td>
			<td class = "currency"><%= change %></td>
			<td><%= number_to_currency(value) %></td>
			</tr>
    <% end %>
  </tbody>
</table>