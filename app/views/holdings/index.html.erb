<p id="notice"><%= notice %></p>

<h1>Listing Holdings</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Stock</th>
			<th>Portfolio</th>
      <th>Amount of Shares</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holdings.each do |holding| %>
      <tr>
        <td><%= holding.user.name %></td>
        <td><%= link_to holding.stock.symbol, holding.stock %></td>
				<td><%= holding.portfolio.name %>
        <td><%= holding.amount %></td>
        <td><%= link_to 'Show', holding %></td>
        <td><%= link_to 'Edit', edit_holding_path(holding) %></td>
        <td><%= link_to 'Destroy', holding, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

