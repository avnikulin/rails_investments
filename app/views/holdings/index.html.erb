<p id="notice"><%= notice %></p>

<h2>Transaction History</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Stock</th>
			<th>Portfolio</th>
      <th>Amount of Shares</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holdings.each do |holding| %>
      <tr>
        <td><%= holding.portfolio.user.id %></td>
        <td><%= link_to holding.stock.symbol, holding.stock %></td>
				<td><%= holding.portfolio.name %></td>
        <td><%= holding.amount %></td>
        <td><%= link_to 'Show', portfolio_holding_path(@portfolio, holding) %></td>
        <td><%= link_to 'Edit', edit_portfolio_holding_path(@portfolio, holding) %></td>
        <td><%= link_to 'Destroy', portfolio_holding_path(@portfolio, holding), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Holding', new_portfolio_holding_path(@portfolio) %>